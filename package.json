{
  "name": "host-forward",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs --only host-forward",
    "pm2:reload": "pm2 reload host-forward",
    "pm2:stop": "pm2 stop host-forward",
    "pm2:dev": "pm2 start ecosystem.config.cjs --only host-forward:dev",
    "pm2:dev:stop": "pm2 stop host-forward:dev",
    "pm2:logs": "pm2 logs host-forward",
    "pm2:list": "pm2 ls"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "http-proxy": "^1.18.1",
    "proxy-agent": "^6.4.0"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^20.11.30",
    "pm2": "^5.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
